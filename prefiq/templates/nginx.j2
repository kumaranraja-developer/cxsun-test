{#version: '3.9'#}

services:
  nginx:
    image: nginx:1.25
    container_name: codexion-nginx
    depends_on:
      - {{ service_name }}
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/certs:/etc/nginx/certs:ro
    restart: unless-stopped

networks:
  default:
    name: codexion-network
    external: true
