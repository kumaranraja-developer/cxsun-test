{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@resources/*": ["/resources/*"]
    },
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["apps/*/src"]
}
